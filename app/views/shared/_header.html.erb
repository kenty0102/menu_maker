<header>
  <nav class="container-fluid">
    <div class="row align-items-center">
      <!-- 左側の空のカラム -->
      <div class="col d-flex justify-content-center align-items-center">
        <div class="row align-items-center">
          <div class="col d-flex justify-content-start align-items-center">
            <%= "いらっしゃいませ、" %>
          </div>
          <div class="w-100"></div>
          <div class="col-8 d-flex justify-content-center align-items-center">
          <%= link_to current_user.name, profile_path, class: "custom-link" %>&nbsp;様
          </div>
        </div>
      </div>

      <!-- 中央揃えのためのカラム -->
      <div class="col text-center">
        <%= link_to root_path, class: "icon-link" do %>
          <%= image_tag "menu_maker_logo.png", alt: "Menu Maker", class: "logo" %>
        <% end %>
      </div>

      <!-- 右側のリンク -->
      <div class="col d-flex justify-content-end align-items-center">
        <span class="d-inline-block me-5">
          <%= link_to t('header.my_page'), profile_path, class: "custom-link" %>
        </span>
        <span class="d-inline-block me-4">
        <%= link_to t('header.logout'), logout_path, class: "custom-link", data: { turbo_method: :delete } %>
        </span>
      </div>
    </div>
  </nav>
  <%= render partial: "shared/navbar" %>
</header>
