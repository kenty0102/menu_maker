<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="col d-flex justify-content-end align-items-center">
    <span class="d-inline-block my-3">
      <%= link_to t('.to_top_page'), root_path, class: "custom-link" %>
    </span>
  </div>
  <h1 class="page-title text-center"><%= t('.title') %></h1>
  <div class="card custom-card-profile-width">
    <div class="profile-container">
      <div class="row justify-content-center">
        <div class="col-9">
          <%= form_with url: login_path do |f| %>
            <div class="mb-4">
              <%= f.label :email, class: "profile-form-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="mb-5">
              <%= f.label :password, class: "profile-form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="row">
              <div class="col d-flex justify-content-center align-items-center">
                <%= f.submit t('.login'), class: "btn top-btn-primary", data: { turbo: false } %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-7 d-flex justify-content-start align-items-center pass-forger-link">
        <%= link_to t('.password_forget'), new_password_reset_path, class: "custom-link" %>
      </div>
      <div class="w-100"></div>
      <div class="col-7 d-flex justify-content-start align-items-center register-link">
        <%= link_to t('.to_register_page'), new_user_path, class: "custom-link" %>
      </div>
    </div>
  </div>
</div>
