<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="col d-flex justify-content-end align-items-center">
    <span class="d-inline-block my-3">
      <%= link_to t('.to_top_page'), root_path, class: "custom-link" %>
    </span>
  </div>
  <h1 class="text-center mt-3"><%= t('.title') %></h1>
  <%= form_with model: @inquiry, url: inquiries_path, method: :post, data: { turbo_confirm: t('.send_inquiry_confirm') } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="card mt-5 custom-card-width mx-auto">
      <div class="container py-2 my-5">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <div class="mb-3">
              <%= f.label :name, class: 'form-label' %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :message, class: "form-label" %>
              <%= f.text_area :message, class: "form-control", rows: 5  %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="d-grid gap-2 col-4 mx-auto my-4">
      <%= f.submit t('.send_inquiry'), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
