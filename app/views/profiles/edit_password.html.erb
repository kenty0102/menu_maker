<% content_for(:title, t('.title')) %>
<% breadcrumb :edit_password_profile %>
<div class="container">
  <div class="row mt-3">
    <div class="col-6 d-flex justify-content-start align-items-center">
      <%= breadcrumbs separator: " &rsaquo; " %>
    </div>
    <div class="col-6 d-flex justify-content-end align-items-center">
      <%= link_to t('.to_top_page'), root_path, class: "custom-link", data: { turbo: false } %>
    </div>
  </div>
  <h1 class="page-title text-center"><%= t('.title') %></h1>
  <%= form_with(model: @user, url: update_password_profile_path, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="card custom-card-profile-width">
    <div class="profile-container">
      <div class="row justify-content-center">
        <div class="col-9">
          <div class="mb-4">
            <%= f.label :current_password, class: 'profile-form-label' %>
            <%= f.password_field :current_password, class: "form-control" %>
          </div>
          <div class="mb-4">
            <%= f.label :new_password, class: "profile-form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div>
            <%= f.label :new_password_confirmation, class: "profile-form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row my-5">
    <div class="col d-flex justify-content-center align-items-center">
      <%= f.submit t('.update'), class: "btn btn-primary", data: { turbo: false } %>
    </div>
  </div>
  <% end %>
</div>
