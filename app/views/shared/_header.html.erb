<header>
  <nav class="container-fluid">
    <div class="row align-items-center">
      <!-- 左側の空のカラム -->
      <div class="col"></div>

      <!-- 中央揃えのためのカラム -->
      <div class="col text-center">
        <%= link_to root_path, class: "icon-link" do %>
          <%= image_tag "menu_maker_logo.png", alt: "Menu Maker", class: "logo" %>
        <% end %>
      </div>

      <!-- 右側のリンク -->
      <div class="col d-flex justify-content-end align-items-center">
        <span class="d-inline-block me-5">
          <%= link_to t('header.my_page'), "#", class: "custom-link" %>
        </span>
        <span class="d-inline-block me-4">
          <%= link_to t('header.logout'), "#", class: "custom-link" %>
        </span>
      </div>
    </div>
  </nav>
  <%= render partial: "shared/navbar" %>
</header>
