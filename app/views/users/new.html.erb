<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="col d-flex justify-content-end align-items-center">
    <span class="d-inline-block my-3 ">
      <%= link_to t('.to_top_page'), root_path, class: "custom-link" %>
    </span>
  </div>
  <h1 class="page-title text-center"><%= t('.title') %></h1>
  <%= form_with model: @user do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="card custom-card-profile-width">
      <div class="profile-container">
        <div class="row justify-content-center">
          <div class="col-9">
            <div class="mb-4">
              <%= f.label :name, class: "profile-form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="mb-4">
              <%= f.label :email, class: "profile-form-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="mb-4">
              <%= f.label :password, class: "profile-form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <div>
              <%= f.label :password_confirmation, class: "profile-form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
            <div class="row mt-5">
              <div class="col d-flex justify-content-center align-items-center">
                <%= f.submit class: "btn btn-primary", data: { turbo: false } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
